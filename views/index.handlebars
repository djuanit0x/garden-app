<html>

<head>
    <title>Dashboard</title>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/bootstrap.js"> </script>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/bootstrap-theme.css">
    <link rel="stylesheet" href="css/home.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script> 
        @viewport {
            width: device-width;
            zoom: 1.0;
        }
    </script>
    <link rel="stylesheet" href="css/reset.css" />
    <style>
        .avatar {
            /*vertical-align: middle;*/
            width: 110px;
            height: 110px;
            border: 2px solid black;
            border-radius: 50%;
        }

        body {
            background-image: url('images/app-background.jpg');
            background-size: 200% 100%;
        }

        .plant-title-container {}

        .plants-wrapper {
            display: inline-flex;*/
            position: fixed;
            overflow: scroll;
            flex-direction: row;
            flex-wrap: wrap;
            transform: scale(1) translate(15px, 18%);
            width: 80vw;
            height:75vh;
            /*border: 5px solid black; */
            /*border-radius: 30px;*/
            /*border: 5px solid black;
            /*border-radius: 15px;*/
        }

        .plant-wrapper {
            display: flex;
            flex-direction: column;
            width: 45%;
            padding: 4%;
            transform: scale(1) translate(15px, 5%);
        }

        .container {
            display: flex;
            flex-direction: column;
        }


        .dashboard-header {
            font-weight: bold;
            font-size: x-large;
            font-family: didot;
            width: 70%;
            border: 5px solid #333;
            border-radius: 35px;
            /*border: rgba(1);*/
            margin: 1.75rem;
            margin-bottom: 2rem;
            margin-top: 3rem;
            padding: 10px;
            transform: scale(1) translate(10px, -30%);
            background-color: #333;
            position: fixed;
        }

        /*.dashboard-header img {
            transform: scale(2) translate(-90px, -45%);
            background-color: transparent;
        }*/

        .special {
            font-family: didot;
            color: white;
            text-align: center;
            margin-left: 11%;
        }

        .specialname {
            font-family: didot;
            position: center;
            padding-left: 20px;
            padding-top: 0.5rem;
            color: white;
            text-shadow: 0 0 3px gray, 0 0 5px gray;

        }

        /* The sidebar menu */
        .navbar {
            background-color: #333;
            position: fixed;
            top:100%;
            bottom: 0;
            width: 87vw;
            z-index: 99;
            border-radius: 35px;
            margin-bottom: 1rem;
            transform: scale(1) translate(11px, -140%);
            z-index: 99;
        }

        .navbar a {
            float: left;
            display: block;
            border-radius: 35px;
            color: #f2f2f2;
            text-align: center;
            padding: 14px;
            text-decoration: none;
            font-size: 5vw;
            font-family: didot;

            margin-top: 1px;
            margin-left: 7px;
        }

        .navbar a:hover {
            background: #f1f1f1;
            color: black;
        }

        .navbar a.active {
            background-color: #4CAF50;
            color: white;
            border-radius: 35px;
            transform: scale(1) translate(-4px, -1%);
            width: 26%;
        }


        /* Style page content - use this if you want to push the page content to the right when you open the side navigation */
        #main {
            transition: margin-left .5s;
            /* If you want a transition effect */
            padding: 20px;
        }

        .mid-container {
            display: flex;
            flex-direction: column;
        }

        /* On smaller screens, where height is less than 450px, change the style of the sidenav (less padding and a smaller font size) */
        @media screen and (max-width: 600px) {
            .navbar.responsive .icon {
                position: absolute;
                right: 0;
                bottom: 0;
            }

            .navbar.responsive a {
                float: none;
                display: block;
                text-align: left;
            }

        }

        .addPlantButton img {
            width: 60px;
            height: 60px;
            display: flex;
            transform: scale(1) translate(260px, -50%);
        }
    </style>

    <script>
        $(document).ready(function () {
            // Handler for .ready() called.

            if (!localStorage.getItem("username")) {
                window.location += "login"
            } else {
                $('.plant-wrapper').children('img').get().forEach((plantImg) => {
                    plantImg.addEventListener('click', function () {
                        const plantId = plantImg.dataset.value;
                        if (plantId) {
                            window.location += `plant/${plantId}`
                        }
                    });
                });

                $(".calendar-link").click(() => {
                    window.location.href = "/calendar"
                });


                $(".login-link").click(() => {
                    window.location.href = "/login"
                });

            }
        })



        /* Set the width of the sidebar to 250px and the left margin of the page content to 250px */
        function openNav() {
            document.getElementById("mySidebar").style.width = "70%";
        }

        /* Set the width of the sidebar to 0 and the left margin of the page content to 0 */
        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

